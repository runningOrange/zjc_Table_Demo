.table{
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 0;  
}
.scrollClass {
  display: flex;
  width: 100%;
  white-space: nowrap;
  height: 100%;
  background-color: #fff;
}
.tableHeader {
  display: inline-flex;
}
.headerText {
  width: 130rpx;
  background-color: #fff;
}
.th {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 90rpx;
  background: #FAFAFA;
  border-right: 1rpx solid rgba(218, 217, 217, 1); 
  border-bottom: 1rpx solid rgba(218, 217, 217, 1); 
  justify-content: center;
  align-items: center;
  overflow-x: auto;
}
.cellLabel{
  font-size: 26rpx;
  color: rgba(74, 74, 74, 1);
}
.tableMain {
  display: inline-flex;
  flex-direction: row;
}
.td {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  background: white;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 0;
  border-left:0; 
}
.tableText{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  font-size: 30rpx;
  color: rgba(55, 134, 244, 1);
  width: 100%;
  word-break: normal;
}
.totalLocation {
  width: calc(100% - 101px);
  text-align: right;
}
.totalText{
  padding-right: 85rpx;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: rgba(55, 134, 244, 1);
  width: 100%;
  word-break: normal;
}